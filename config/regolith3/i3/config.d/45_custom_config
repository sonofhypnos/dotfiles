## Launch // Mnemonics (senfcall, bluebutton) // Ctrl <> Alt r ##/
set $r_mode Layout Mode: [s]enfcall [b]luebutton
bindsym Control+$mod+$alt+r mode "$r_mode"

mode "$r_mode" {
	bindsym Escape mode "default"
	bindsym Return mode "default"
	bindsym s mode "default" exec google-chrome-stable --no-sandbox --app=https://public.senfcall.de/ka-rationality
	bindsym b mode "default" exec google-chrome-stable --no-sandbox --app=https://bbb23.senfcall.de/html5client/join?sessionToken=1rjjiv1kgifdse8k
}



